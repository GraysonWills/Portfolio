{
  "family": "portfolio-redis-api",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::381492289909:role/PortfolioEcsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::381492289909:role/PortfolioRedisApiTaskRole",
  "containerDefinitions": [
    {
      "name": "redis-api",
      "image": "381492289909.dkr.ecr.us-east-2.amazonaws.com/portfolio-redis-api:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "NODE_ENV", "value": "production" },
        { "name": "PORT", "value": "3000" },

        {
          "name": "ALLOWED_ORIGINS",
          "value": "http://localhost:4300,http://localhost:4301,https://www.grayson-wills.com,https://d39s45clv1oor3.cloudfront.net"
        },

        { "name": "COGNITO_REGION", "value": "us-east-2" },
        { "name": "COGNITO_USER_POOL_ID", "value": "us-east-2_dzSpoyFyI" },
        { "name": "COGNITO_CLIENT_ID", "value": "6v59a97qmb3hfl1n7ptp8npdoi" },
        { "name": "AUTH_ALLOWED_USERNAMES", "value": "grayson-wills" },

        { "name": "S3_UPLOAD_BUCKET", "value": "grayson-wills-media-381492289909" },
        { "name": "S3_UPLOAD_REGION", "value": "us-east-2" },
        { "name": "S3_UPLOAD_PREFIX", "value": "uploads/" },
        { "name": "PHOTO_ASSETS_BUCKET", "value": "grayson-wills-media-381492289909" },
        { "name": "PHOTO_ASSETS_REGION", "value": "us-east-2" },
        { "name": "PHOTO_ASSETS_PREFIX", "value": "photo-assets/" },
        { "name": "PHOTO_ASSETS_TABLE_NAME", "value": "portfolio-photo-assets" },
        { "name": "PHOTO_ASSETS_PRESIGN_EXPIRES_SECONDS", "value": "900" },
        { "name": "PHOTO_ASSETS_MAX_FILE_BYTES", "value": "15728640" },
        { "name": "PHOTO_ASSETS_ALLOWED_MIME", "value": "image/jpeg,image/png,image/webp,image/gif,image/avif,image/svg+xml" },

        { "name": "PUBLIC_SITE_URL", "value": "https://www.grayson-wills.com" },
        { "name": "EMAIL_BRAND_LOGO_URL", "value": "https://www.grayson-wills.com/favicon.png" },
        { "name": "CONTENT_BACKEND", "value": "dynamodb" },
        { "name": "CONTENT_TABLE_NAME", "value": "portfolio-content" },
        { "name": "PREVIEW_SESSIONS_TABLE_NAME", "value": "portfolio-content-preview-sessions" },
        { "name": "ANALYTICS_QUEUE_ENABLED", "value": "true" },
        { "name": "ANALYTICS_QUEUE_URL", "value": "https://sqs.us-east-2.amazonaws.com/381492289909/portfolio-analytics-events" },
        { "name": "ANALYTICS_DEFAULT_SOURCE", "value": "portfolio-app" },
        { "name": "SUBSCRIBERS_TABLE_NAME", "value": "portfolio-email-subscribers" },
        { "name": "TOKENS_TABLE_NAME", "value": "portfolio-email-tokens" },
        { "name": "DDB_REGION", "value": "us-east-2" },
        { "name": "SES_FROM_EMAIL", "value": "no-reply@grayson-wills.com" },
        { "name": "SES_REGION", "value": "us-east-1" },
        { "name": "EMAIL_NOTIFICATIONS_ENABLED", "value": "true" },

        { "name": "SCHEDULER_GROUP_NAME", "value": "portfolio-email" },
        {
          "name": "SCHEDULER_INVOKE_ROLE_ARN",
          "value": "arn:aws:iam::381492289909:role/PortfolioSchedulerInvokeLambdaRole"
        },
        {
          "name": "SCHEDULER_TARGET_LAMBDA_ARN",
          "value": "arn:aws:lambda:us-east-2:381492289909:function:portfolio-redis-api"
        }
      ],
      "secrets": [
        {
          "name": "SCHEDULER_WEBHOOK_SECRET",
          "valueFrom": "arn:aws:ssm:us-east-2:381492289909:parameter/portfolio/scheduler/webhook-secret"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/portfolio-redis-api",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
